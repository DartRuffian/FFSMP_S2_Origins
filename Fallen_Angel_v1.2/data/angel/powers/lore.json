{
	"type": "origins:multiple",
	"hidden": true,

	"good_lore": {
		"type": "origins:resource",
		"min": 0,
		"max": 4,
		"start_value": 0,
		"hud_render": {
			"should_render": false
		},
		"hidden": true
	},


	"partone": {
		"type": "origins:action_on_callback",
		"entity_action_chosen": {
			"type": "origins:execute_command",
			"command": "tellraw @s {\"text\":\"My dear child, it pains me to see you as a mortal. Prove yourself, and join me once again.\",\"bold\":true,\"italic\":true,\"color\":\"dark_green\"}",
			"permission_level": 4
		},
		"execute_chosen_when_orb": true
	},
	"parttwo": {
		"type": "origins:action_over_time",
		"interval": 20,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tellraw @s {\"text\":\"You are doing well. Continue this path of peace, and Ascend.\",\"bold\":true,\"italic\":true,\"color\":\"dark_green\"}",
					"permission_level": 4
				},
				{
					"type": "origins:change_resource",
					"resource": "angel:lore_good_lore",
					"change": 1
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "angel:morality",
					"comparison": "==",
					"compare_to": 20
				},
				{
					"type": "origins:resource",
					"resource": "angel:lore_good_lore",
					"comparison": "==",
					"compare_to": 0
				}
			]
		}
	},
	"partthree": {
		"type": "origins:action_over_time",
		"interval": 20,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tellraw @s {\"text\":\"Well done, my child. True Elysium is nearly within your grasp. Beware, however. Pride cometh before the fall. Though you have already learnt that...\",\"bold\":true,\"italic\":true,\"color\":\"dark_green\"}",
					"permission_level": 4
				},
				{
					"type": "origins:change_resource",
					"resource": "angel:lore_good_lore",
					"change": 1
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "angel:morality",
					"comparison": "==",
					"compare_to": 50
				},
				{
					"type": "origins:resource",
					"resource": "angel:lore_good_lore",
					"comparison": "==",
					"compare_to": 1
				}
			]
		}
	},
	"partfour": {
		"type": "origins:action_over_time",
		"interval": 20,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tellraw @s {\"text\":\"Fragments of your power are already returning to you. You can feel it, can't you. Godhood. It shall soon be yours once again.\",\"bold\":true,\"italic\":true,\"color\":\"dark_green\"}",
					"permission_level": 4
				},
				{
					"type": "origins:change_resource",
					"resource": "angel:lore_good_lore",
					"change": 1
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "angel:morality",
					"comparison": "==",
					"compare_to": 70
				},
				{
					"type": "origins:resource",
					"resource": "angel:lore_good_lore",
					"comparison": "==",
					"compare_to": 2
				}
			]
		}
	},
	"partfive": {
		"type": "origins:action_over_time",
		"interval": 20,
		"rising_action": {
			"type": "origins:and",
			"actions": [
				{
					"type": "origins:execute_command",
					"command": "tellraw @s {\"text\":\"...You did it. You have done well, Fallen One. Unfortunately, I have terrible news. You may not return to True Elysium. You may not Ascend. The only power you can keep is that which you hold now. Your previous actions may happen again, even if you have not done them. I can not trust you. You will be remaining a mortal, my Fallen Angel. Have one more, permanent, blessing; as a show of my appreciation for your dedication.\",\"bold\":true,\"italic\":true,\"color\":\"dark_green\"}",
					"permission_level": 4
				},
				{
					"type": "origins:change_resource",
					"resource": "angel:lore_good_lore",
					"change": 1
				}
			]
		},
		"condition": {
			"type": "origins:and",
			"conditions": [
				{
					"type": "origins:resource",
					"resource": "angel:morality",
					"comparison": "==",
					"compare_to": 80
				},
				{
					"type": "origins:resource",
					"resource": "angel:lore_good_lore",
					"comparison": "==",
					"compare_to": 3
				}
			]
		}
	}
}
